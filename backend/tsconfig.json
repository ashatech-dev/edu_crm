{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src",
    "__tests__",
    "__tests__/features/auth/hashing.test.ts",
    "__tests__/features/auth/jwt.test.ts",
    "js_docs",
    "js_apis"
  ],
  "exclude": ["node_modules", "dist"]
}
